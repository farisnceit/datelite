{
  "name": "@farisnceit/datelite",
  "version": "1.0.0",
  "description": "A fully customizable, feature-rich date picker component built with pure vanilla JavaScript. No dependencies, modern ES6+ syntax, with comprehensive date selection modes, theming, and accessibility support.",
  "main": "dist/datelite.min.js",
  "module": "src/DatePicker.js",
  "types": "types/index.d.ts",
  "style": "dist/datelite.min.css",
  "files": [
    "dist/",
    "src/",
    "types/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm run build:js && pnpm run build:css",
    "build:js": "rollup -c rollup.config.js",
    "build:css": "pnpm run build:css:main && pnpm run build:css:min",
    "build:css:main": "postcss src/datelite.css -o dist/datelite.css",
    "build:css:min": "postcss src/datelite.css -o dist/datelite.min.css --env production",
    "dev": "rollup -c rollup.config.js --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"types/**/*.ts\"",
    "validate": "pnpm run lint && pnpm run test && pnpm run build",
    "prepublishOnly": "pnpm run validate",
    "serve": "http-server . -p 8080 -o",
    "docs:build": "typedoc src/DatePicker.js --out docs",
    "size": "bundlesize"
  },
  "keywords": [
    "datelite",
    "datepicker",
    "calendar",
    "date",
    "picker",
    "vanilla",
    "javascript",
    "es6",
    "no-dependencies",
    "lightweight",
    "customizable",
    "accessible",
    "responsive",
    "range-picker",
    "multiple-dates",
    "themes",
    "css-variables"
  ],
  "author": {
    "name": "M Mohamed Fariz",
    "email": "faris872010@gmail.com",
    "url": "https://farizbytes.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/datelite.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/datelite/issues"
  },
  "homepage": "https://github.com/your-username/datelite#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.21",
    "bundlesize": "^0.18.2",
    "cssnano": "^7.1.0",
    "eslint": "^9.32.0",
    "http-server": "^14.1.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "typedoc": "^0.28.9",
    "typescript": "^5.9.2"
  },
  "bundlesize": [
    {
      "path": "./dist/datelite.min.js",
      "maxSize": "25kb"
    },
    {
      "path": "./dist/datelite.min.css",
      "maxSize": "15kb"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
